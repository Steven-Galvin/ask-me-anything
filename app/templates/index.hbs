<div class="row">
  <div class="col-md-8">
    <h2> Welcome to Proident! </h2>

    Check out the questions below, or ask your own!
    <hr>
    {{#each model.questions as |question|}}
      {{#link-to 'question' question.id}}<h4>{{question.title}}</h4>{{/link-to}}
      <small>by {{question.author}}</small>
      <hr>
    {{/each}}
  </div>
  <div class="col-md-4" id="newQuestion">
    {{new-question saveQuestion="saveQuestion"}}
  </div>
</div>
